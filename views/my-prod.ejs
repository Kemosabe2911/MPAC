<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MPAC</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/purchase.css">
    <!--icons api-->
    <a href="https://icons8.com/icon/3260/sell"></a>
    <script src="https://kit.fontawesome.com/087042e108.js" crossorigin="anonymous"></script>
    <!--Jquery cdn-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!--Animate CSS-->
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
</head>
<body>
    <!--Home Section-->
    <section id="home-form">
        <!--Navbar-->
        <nav id="navbar">
            <ul>
                <li class="logo">MPAC</li>
                <li class="items"><a href="/home">Home</a></li>
                <li class="items"><a href="/dashboard">Dashboard</a></li>
                <li class="items"><a href="/about">About Us</a></li>
                <li class="items"><a href="/contact">Contact Us</a></li>
                <li class="items"><a href="/logout">Logout</a></li>
                <li class="toggle"><span class="bars"></span></li>
            </ul>
        </nav>
        <!--Product Display-->
        <div class="container animate__animated animate__fadeIn">
            <% if(typeof books != 'undefined') { %>
                <% books.forEach(function(data){ %>
                    <div class="prod-card">
                        <div class="image">
                            <img src="<%= typeof data.image !='undefined'? `/uploads/${data.image}` : 'Not displaying' %>" alt="Sample photo">
                        </div>
                        <div class="card-content">
                            <div class="wrapper">
                                <div class="title"><%= data.b_name %></div>
                                <p>Author: <%= data.author %></p>
                                <p>Pages: <%= data.pages %></p>
                                <div class="price">₹<%= data.price %></div>  
                            <form action="/purchase"  method="POST">
                                <input type="hidden" name="prod" value="<%= data.b_id %>" />
                                <input type="hidden" name="bname" value="<%= data.b_name %>" />
                                <input type="hidden" name="author" value="<%= data.author %>" />
                                <input type="hidden" name="subject" value="<%= data.subject %>" />
                                <input type="hidden" name="image" value="<%= data.image %>" />
                                <input type="hidden" name="pages" value="<%= data.pages %>" />
                                <input type="hidden" name="price" value="<%= data.price %>" />
                                <input type="hidden" name="user" value="<%= data.user_id %>" />
                                <div id="btns">
                                    <input type="submit" class="btn1" formaction="/update-books" name="purchase" value="Update">
                                    <input type="submit" class="btn2" formaction="/prod-remove-books" name="cart" value="Remove">
                                </div>
                            </form>
                            </div>
                        </div>
                </div>
                <%}); %>
            <%} %>

            <!--Tools-->
            <% if(typeof tools != 'undefined') { %>
                <% tools.forEach(function(data){ %>
                    <div class="prod-card">
                        <div class="image">
                            <img src="<%= typeof data.image !='undefined'? `/uploads/${data.image}` : 'Not displaying' %>" alt="Sample photo">
                        </div>
                        <div class="card-content">
                            <div class="wrapper">
                                <div class="title"><%= data.t_name %></div>
                                <p>Branch: <%= data.branch %></p>
                                <div class="price">₹<%= data.price %></div>  
                            <form action="/purchase"  method="POST">
                                <input type="hidden" name="prod" value="<%= data.t_id %>" />
                                <input type="hidden" name="bname" value="<%= data.t_name %>" />
                                <input type="hidden" name="subject" value="<%= data.branch %>" />
                                <input type="hidden" name="image" value="<%= data.image %>" />
                                <input type="hidden" name="price" value="<%= data.price %>" />
                                <input type="hidden" name="user" value="<%= data.user_id %>" />
                                <div id="btns">
                                    <input type="submit" class="btn1" formaction="/update-tools" name="purchase" value="Update">
                                    <input type="submit" class="btn2" fformaction="/prod-remove-tools" name="cart" value="Remove">
                                </div>
                            </form>
                            </div>
                        </div>
                </div>
                <%}); %>
            <%} %>

            <!--Calculators-->
            <% if(typeof calcs != 'undefined') { %>
                <% calcs.forEach(function(data){ %>
                    <div class="prod-card">
                        <div class="image">
                            <img src="<%= typeof data.image !='undefined'? `/uploads/${data.image}` : 'Not displaying' %>" alt="Sample photo">
                        </div>
                        <div class="card-content">
                            <div class="wrapper">
                                <div class="title"><%= data.c_name %></div>
                                <p>Type: <%= data.c_type %></p>
                                <p>Power: <%= data.power %></p>
                                <div class="price">₹<%= data.price %></div>  
                            <form action="/purchase"  method="POST">
                                <input type="hidden" name="prod" value="<%= data.c_id %>" />
                                <input type="hidden" name="bname" value="<%= data.c_name %>" />
                                <input type="hidden" name="subject" value="<%= data.c_type %>" />
                                <input type="hidden" name="power" value="<%= data.power %>" />
                                <input type="hidden" name="image" value="<%= data.image %>" />
                                <input type="hidden" name="price" value="<%= data.price %>" />
                                <input type="hidden" name="user" value="<%= data.user_id %>" />
                                <div id="btns">
                                    <input type="submit" class="btn1" formaction="/update-calcs" name="purchase" value="Update">
                                    <input type="submit" class="btn2" formaction="/prod-remove-calcs" name="cart" value="Remove">
                                </div>
                            </form>
                            </div>
                        </div>
                </div>
                <%}); %>
            <%} %>
            <!--Extras-->
            <% if(typeof exts != 'undefined') { %>
                <% exts.forEach(function(data){ %>
                <div class="prod-card">
                        <div class="image">
                            <img src="<%= typeof data.image !='undefined'? `/uploads/${data.image}` : 'Not displaying' %>" alt="Sample photo">
                        </div>
                        <div class="card-content">
                            <div class="wrapper">
                                <div class="title"><%= data.e_name %></div>
                                <div class="price">₹<%= data.price %></div>  
                            <form action="/purchase"  method="POST">
                                <input type="hidden" name="prod" value="<%= data.e_id %>" />
                                <input type="hidden" name="bname" value="<%= data.e_name %>" />
                                <input type="hidden" name="image" value="<%= data.image %>" />
                                <input type="hidden" name="price" value="<%= data.price %>" />
                                <input type="hidden" name="user" value="<%= data.user_id %>" />
                                <div id="btns">
                                    <input type="submit" class="btn1" formaction="/update-exts" name="purchase" value="Update">
                                    <input type="submit" class="btn2" formaction="/prod-remove-exts" name="cart" value="Remove">
                                </div>
                            </form>
                            </div>
                        </div>
                </div>
                <%}); %>
            <%} %>
        </div>
    </section>  
    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
    <script src='/js/jquery.js'></script>  
</body>
</html>