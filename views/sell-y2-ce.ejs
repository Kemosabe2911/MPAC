<body>

    <!--Home Section-->
    <section id="home-form">
        <!--Navbar-->
        <nav id="navbar">
            <ul>
                <li class="logo">MPAC</li>
                <li class="items"><a href="/home">Home</a></li>
                <li class="items"><a href="/dashboard">Dashboard</a></li>
                <li class="items"><a href="/about">About Us..</a></li>
                <li class="items"><a href="/contact">Contact Us</a></li>
                <li class="toggle"><span class="bars"></span></li>
            </ul>
        </nav>
        <form action="/sell-y2-cs" method="POST" enctype="multipart/form-data">
            <div id="form-body">
                <h1>Second Year CE Textbook</h1>
                <div class="book-name">
                    Book Name <input type="text" class="input-box" name="bname" id="bname" value="<%= typeof bname != 'undefined' ? bname : ''%>" required="" />
                </div>
                <div class="book-author">
                    Author <input type="text"  class="input-box" name="author" id="author" value="<%= typeof author != 'undefined' ? author : ''%>" required="" />
                </div>
                <div class="book-subject">
                    Subject <br>
                    <SELECT id="subject" name="selectpicker" class="input-box" maxlength=12>
                        <option name="NONE" selected >--NONE--
                            <option name="Linear Algebra & Complex Analysis" >Linear Algebra & Complex Analysis (MA201) 
                            <option name="Mechanics of Solids">Mechanics of Solids (CE201) 
                            <option name="Fluid Mechanics I">Fluid Mechanics I (CE203)
                            <option name="Engineering Geology ">Engineering Geology (CE205) 
                            <option name="Surveying ">Surveying (CE207) 
                            <option name="Lifeskills ">Lifeskills (HS210)	
                            <option name="Business Economics ">Business Economics (HS200)	
                            <option name="Probability Distributions,Transforms and Numerical Methods">Probability Distributions,Transforms and Numerical Methods (MA202)
                            <option name="Structural Analysis I">Structural Analysis I (CE202)
                            <option name="Construction Technology ">Construction Technology (CE204) 
                            <option name="Fluid Mechanics II">Fluid Mechanics II (CE206)
                            <option name="Geotechnical Engineering I">Geotechnical Engineering I (CE208)
                    </SELECT>
                </div>
                <div class="book-pages">
                    Pages <input type="number"  class="input-box" name="pages" id="pages" value="<%= typeof pages != 'undefined' ? pages : ''%>" required="" />
                </div>
                <div class="book-price">
                    Expected Price <input type="number"  class="input-box" name="price" id="price" value="<%= typeof price != 'undefined' ? price : ''%>" required="" />
                </div>
                <div class="input-file">
                    <!-- actual upload which is hidden -->
                    <input type="file" id="pImage" name="pImage" hidden/>

                    <!-- our custom upload button -->
                    <label class="choose" for="pImage">Choose Image</label>

                    <!-- name of file chosen 
                    <span id="file-chosen">No Image chosen</span>-->
                  
                </div>
                <!--
                <div class="input-group mb-3">
                    <div class="custom-file">
                      <input type="file" class="custom-file-input" id="pImage" name="pImage" aria-describedby="inputGroupFileAddon01">
                      <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                </div>-->
                <div class="submit-div">
                    <div class="submit">
                        <button class="sub-button" type="submit">Submit</button>
                    </div>
                    
                </div>
                
            </div>
        </form>
    </section>
